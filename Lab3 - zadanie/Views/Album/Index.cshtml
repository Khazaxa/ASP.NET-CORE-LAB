@model List<Lab3zadanie.Models.Album>
@{
    // Your existing Razor page directives and setup
}
<a class="btn btn-primary" asp-controller="Album" asp-action="Create">Add an Album</a>
@if (Model.Count > 0)
{
    <h1>List of Albums</h1>
    <table class="table">
        <tr>
            <th>
                Title
            </th>
            <th>
                Artist/Band
            </th>
            <th>
                Actions
            </th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.Artist
                </td>
                <td>
                    <a class="btn btn-outline-secondary" asp-controller="Album" asp-action="Update" asp-route-id=@item.Id>Edit</a>
                    <a class="btn btn-outline-info" asp-controller="Album" asp-action="Details" asp-route-id=@item.Id>Details</a>
                    <a class="btn btn-outline-danger" asp-controller="Album" asp-action="Delete" asp-route-id=@item.Id>Delete</a>
                </td>
            </tr>
        }
    </table>
}
else
{
    <p class="alert-dark">No albums to display.</p>
}
