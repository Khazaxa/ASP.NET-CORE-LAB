@model Lab3zadanie.Models.Album
@{
    // Your existing Razor page directives and setup
}
<h1>Edit an Album</h1>
<form asp-controller="Album" asp-action="Update" method="post">
    <div class="mb-3">
        <label asp-for="Title">Title</label>
        <input class="form-control" asp-for="Title" />
        <span class="text-danger" asp-validation-for="Title"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Artist">Artist/Band</label>
        <input class="form-control" asp-for="Artist" />
        <span class="text-danger" asp-validation-for="Artist"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReleaseYear">Release Year</label>
        <input class="form-control" asp-for="ReleaseYear" />
        <span class="text-danger" asp-validation-for="ReleaseYear"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Genre">Genre</label>
        <input class="form-control" asp-for="Genre" />
        <span class="text-danger" asp-validation-for="Genre"></span>
    </div>
    <div class="mb-3">
        <button class="btn btn-primary" type="submit">Save</button>
        <button class="btn btn-danger" type="reset">Clear</button>
        <a class="btn btn-secondary" asp-action="Index">Back</a>
    </div>
</form>
