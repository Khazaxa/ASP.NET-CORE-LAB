@{
}

<h1>Dodaj kontakt</h1>
<form asp-controller="Contact" asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="Name"></label>
        <div>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Name" />
    </div>
    <div class="mb-3">
        <label asp-for="Email"></label>
        <div>
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Email" />
    </div>
    <div class="mb-3">
        <label asp-for="Phone"></label>
        <div>
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <input class="form-control" type="text" asp-for="Phone" />
    </div>
    <div class="mb-3">
        <label asp-for="Birth"></label>
        <input class="form-control" asp-for="Birth" />
        <span class="text-danger" asp-validation-for="Birth"></span>
    </div>

    <div>
        <label asp-for="Priority"></label>
        <div>
            <span asp-validation-for="Priority" class="text-danger"></span>
        </div>
        <select class="form-control" asp-for="Priority" asp-items="@Html.GetEnumSelectList<Priority>()"></select>
    </div>
    <br />
    <div>
        <button class="btn btn-primary" type="submit"> Utworz </button>
        <button class="btn-secondary" type="reset"> Wyczysc </button>
    </div>
   
    
    
</form> 