@model Dictionary<int, Album>

<h2>Lista Albumów</h2>

<p>
    <a class="btn btn-primary" asp-action="Create">Dodaj nowy album</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nazwa</th>
            <th>Zespół</th>
            <th>Notowanie</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Value.Nazwa</td>
                <td>@item.Value.Zespol</td>
                <td>@item.Value.Notowanie</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Key">Edytuj</a> 
                    <a class="btn btn-secondary" asp-action="Details" asp-route-id="@item.Key">Szczegóły</a> 
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Key">Usuń</a>
                </td>
            </tr>
        }
    </tbody>
</table>
